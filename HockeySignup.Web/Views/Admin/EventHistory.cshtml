@model HockeySignup.Web.Models.HistoryViewModel

<div class="row" style="margin-top: 10px;">
    <div class="col-md-8 col-md-offset-2">
        <h3>Signups for @Model.Event.Date.ToLongDateString()</h3>
        <table class="table table-striped table-hover table-bordered">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                @if (Model.Event.Date > DateTime.Today)
                {
                    <th>Delete</th>
                }
            </tr>
            @foreach (HockeySignup.Data.EventSignup e in Model.Signups)
            {
                <tr>
                    <td>@e.FirstName</td>
                    <td>@e.LastName</td>
                    <td>
                        @e.Email
                    </td>
                    @if (Model.Event.Date > DateTime.Today)
                    {
                        <td>
                            <button class="btn btn-danger">Delete</button>
                        </td>
                    }
                </tr>
            }
        </table>
    </div>
</div>
